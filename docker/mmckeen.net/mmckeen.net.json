{
  "builders": [
    {
      "type": "docker",
      "image": "mmckeen/opensuse-13-1",
      "export_path": "mmckeen.net.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
                  "zypper -n ref",
                  "zypper -n up",
                  "zypper -n in nginx",
                  "echo 'daemon off;' >> /etc/nginx/nginx.conf"
                ]
    },
    {
      "type": "file",
      "source": "/srv/www/mmckeen.net/",
      "destination": "/srv/www/htdocs/"      
    }
  ]
}
